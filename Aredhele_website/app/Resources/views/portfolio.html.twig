        <a href="#about" class="w3-bar-item w3-button w3-hide-small"><i class="fa fa-user"></i> {{ trad.about }}</a>
        <a href="#portfolio" class="w3-bar-item w3-button w3-hide-small"><i class="fa fa-th"></i> {{ trad.portfolio }}</a>
