<script src="{{ asset("JS/jquery.form-validator.min.js") }}" type="text/javascript"></script>
<script src="https://maps.googleapis.com/maps/api/js?sensor=false" type="text/javascript"></script>
<script src="{{ asset("JS/owl.carousel.min.js") }}" type="text/javascript"></script>
<script src="{{ asset("JS/jquery.superslides.min.js") }}" type="text/javascript"></script>
<script src="{{ asset("JS/jquery.inview.min.js") }}" type="text/javascript"></script>
<script src="{{ asset("JS/script.js") }}" type="text/javascript"></script>
<!--Scripts-->
</body>
</html>