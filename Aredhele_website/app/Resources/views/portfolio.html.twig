        </div>

        <!-- Hide this text on small devices -->
        <div class="w3-col m6 w3-hide-small w3-padding-large">
            {{ content2 | raw }}
        </div>
    </div>
    <h3 class="w3-center">{{ trad.speciality }}</h3>

    {% for skill in skills %}
        <div class="w3-wide">
            <img src="{{ asset("IMG/"~skill.picto) }}" class="picto">
            <p class="bloc">
                {{ skill.name }}
            </p>
        </div>
        <div class="w3-light-grey">
            <div class="w3-container w3-padding-small w3-blue-grey w3-center" style="width:{{ skill.skillProgress }}%">{{ skill.skillProgress }}%</div>
